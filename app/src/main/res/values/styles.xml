<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkNotBlack</item>
        <item name="colorPrimaryDark">@color/notQuiteBlack</item>
        <item name="colorAccent">@color/blurple</item>
        <item name="android:textColor">@color/fullWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DigitsTheme" parent="android:Theme.Light">
        <item name="android:textColorPrimary">@color/fullWhite</item>
        <item name="android:textColorSecondary">@color/greyple</item>
        <item name="android:windowBackground">@color/darkNotBlack</item>
        <item name="android:textColorLink">@color/darkBlurple</item>
        <item name="dgts__accentColor">@color/blurple</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="colorControlHighlight">@color/darkNotBlack</item>
        <item name="android:textColor">@color/fullWhite</item>
        <item name="android:textColorPrimary">@color/fullWhite</item>
        <item name="android:actionMenuTextColor">@color/fullWhite</item>
        <item name="android:textColorSecondary">@color/fullWhite</item>
        <item name="android:background">@color/notQuiteBlack</item>
    </style>

</resources>
